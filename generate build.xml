<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<project default="main">

	<target name="main">
		<antcall target="javadoc" />
		<antcall target="compile" />
		<antcall target="clean" />
	</target>

	<target name="javadoc">
		<javadoc access="protected" author="true"
			classpath="lib/junit-4.12.jar;lib/hamcrest-all-1.3.jar;lib/org.eclipse.jdt.annotation_2.0.0.v20140415-1436.jar" 
			destdir="doc" doctitle="WaDosUtil" 
			nodeprecated="false" nodeprecatedlist="false" 
			noindex="false" nonavbar="false" notree="false" 
			packagenames="ch.judos.generic.*,ch.waan.*,org.bitlet.weupnp,*" 
			source="1.8" sourcepath="waan;judos" splitindex="true" 
			use="true" version="true" />
	</target>

	<target name="clean">
		<delete dir="doc" />
	</target>

	<target name="compile">
		<jar destfile="builds/WaDosUtil-X.X-all.jar" filesetmanifest="mergewithoutmain">
			<fileset dir="bin">
				<exclude name="**/ch/judos/examples/**" />
			</fileset>
			<fileset dir="judos"  />
			<fileset dir="waan" />
			<fileset dir="doc" />
		</jar>
		<jar destfile="builds/WaDosUtil-X.X.jar" filesetmanifest="mergewithoutmain">
			<fileset dir="bin">
				<exclude name="**/ch/judos/examples/**" />
			</fileset>
			<fileset dir="judos" />
			<fileset dir="waan" />
		</jar>
	</target>
</project>
