<?xml version="1.0" encoding="UTF-8" standalone="no"?>

<project default="main">


	<target name="main">
		<!-- version numbers -->
		<property name="build.major" value="1.4" />
		<buildnumber file="build-number.txt" />
		<property name="build.version" value="${build.major}.${build.number}" />

		<antcall target="javadoc" />
		<antcall target="compile" />
		<antcall target="clean" />
	</target>

	<target name="javadoc">
		<javadoc access="protected" author="true" classpath="lib/junit-4.12.jar;lib/hamcrest-all-1.3.jar;lib/org.eclipse.jdt.annotation_2.0.0.v20140415-1436.jar" destdir="doc" doctitle="WaDosUtil" nodeprecated="false" nodeprecatedlist="false" noindex="false" nonavbar="false" notree="false" packagenames="ch.judos.generic.*,ch.waan.*,org.bitlet.weupnp,*,ch.wados.*" source="1.8" sourcepath="waan;judos;src" splitindex="true" use="true" version="true">
			<tag name="todo" />
			<tag name="copyright" />
			<tag name="source" />
			<tag name="default" />
		</javadoc>
	</target>

	<target name="clean">
		<delete dir="doc" />
	</target>

	<target name="compile">
		<jar destfile="builds/WaDosUtil-${build.version}-all.jar" filesetmanifest="mergewithoutmain">
			<fileset dir="bin">
				<exclude name="**/ch/judos/examples/**" />
			</fileset>
			<fileset dir="judos" />
			<fileset dir="waan" />
			<fileset dir="src" />
			<fileset dir="doc" />
		</jar>
		<jar destfile="builds/WaDosUtil-${build.version}.jar" filesetmanifest="mergewithoutmain">
			<fileset dir="bin">
				<exclude name="**/ch/judos/examples/**" />
			</fileset>
			<fileset dir="judos" />
			<fileset dir="waan" />
			<fileset dir="src" />
		</jar>
	</target>
</project>
